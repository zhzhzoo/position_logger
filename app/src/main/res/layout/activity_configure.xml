<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20sp"
    android:showDividers="middle"
    android:rowCount="10"
    android:columnCount="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Launch on Startup"
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4"
            android:layout_marginTop="22dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/autoStart"
            android:layout_weight="1"
            android:checked="false"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:layout_marginLeft="33dp"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toRightOf="@+id/savePreferences"
            android:layout_toEndOf="@+id/savePreferences" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logging Interval"
            android:id="@+id/textView4"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/interval"
            android:inputType="number"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:layout_toEndOf="@+id/savePreferences"
            android:layout_alignTop="@+id/textView4"
            android:layout_toRightOf="@+id/savePreferences" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User ID"
            android:id="@+id/textView6"
            android:layout_weight="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:layout_marginTop="43dp"
            android:layout_below="@+id/interval"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userId"
            android:layout_weight="1"
            android:inputType="text"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="5"
            android:layout_toEndOf="@+id/serviceStatus"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignLeft="@+id/interval"
            android:layout_alignStart="@+id/interval" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Preferences"
            android:id="@+id/savePreferences"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="6"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Status"
            android:id="@+id/textView"
            android:layout_column="0"
            android:singleLine="false"
            android:layout_weight="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="7"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/savePreferences"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stopped"
            android:id="@+id/serviceStatus"
            android:layout_column="0"
            android:layout_weight="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="8"
            android:layout_alignTop="@+id/textView"
            android:layout_toRightOf="@+id/savePreferences"
            android:layout_toEndOf="@+id/savePreferences" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Service"
            android:id="@+id/serviceButton"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="9"
            android:layout_marginTop="43dp"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/savePreferences"
            android:layout_alignStart="@+id/savePreferences" />

</RelativeLayout>